<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="${relativePackage}.${activityClass}"
	android:background="@android:color/white"
	android:padding="10dp"
	>

	<ImageView android:id="@+id/ivDetailViewProfileImage"
		android:layout_width="50dp" 
		android:layout_height="50dp"
		android:scaleType="fitCenter"
		android:paddingTop="05dp"
		android:layout_alignParentLeft="true" 
		android:layout_alignParentTop="true"
		android:src="@drawable/ic_launcher"/>

	<TextView android:id="@+id/tvDetailViewName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/ivDetailViewProfileImage" 
		android:layout_marginLeft="10dp"
		android:textSize="16sp"
		android:textStyle="bold"/>
	
	<TextView android:id="@+id/tvDetailViewUserName" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_below="@+id/tvDetailViewName"
		android:layout_alignLeft="@+id/tvDetailViewName"
		android:textColor="#bbbbbb"
		android:textSize="14sp"
	 />
	
	<TextView android:id="@+id/tvDetailViewTweetBody" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignLeft="@+id/ivDetailViewProfileImage"
		android:layout_below="@+id/ivDetailViewProfileImage"
		android:layout_marginTop="05dp"
		android:textSize="16sp"
		android:textColor="#7e7e7e"
		android:autoLink="web"
     	android:linksClickable="true"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	
	<ImageView android:id="@+id/ivDetailViewMedia" 
		android:layout_width="fill_parent" 
		android:layout_height="400dp"
		android:scaleType="centerCrop"
		android:layout_marginTop="10dp"
		android:layout_alignLeft="@+id/tvDetailViewTweetBody" 
		android:layout_below="@+id/tvDetailViewTweetBody" 
		android:src="@drawable/ic_launcher"/>
	
	<TextView android:id="@+id/tvRetweetFavCount" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:layout_alignLeft="@+id/ivDetailViewMedia"
		android:layout_below="@+id/ivDetailViewMedia"
		android:layout_marginTop="10dp"
		android:textSize="14sp"
		android:textColor="#7e7e7e"
		android:textAppearance="?android:attr/textAppearanceMedium" />
	
	

</RelativeLayout>
